/* Reset de base */
* { box-sizing: border-box; }
html, body { margin:0; padding:0; }
body { font-family: Arial, sans-serif; line-height:1.6; }

/* Barre de navigation fixée et centrée */
nav {
  position: fixed;
  top: 0; left: 0; right: 0;
  background: #34495e;
  z-index: 9999;
}
.nav-inner {
  display: flex;
  justify-content: center;   /* centre horizontalement */
  align-items: center;
  flex-wrap: wrap;           /* passe sur 2 lignes si écran étroit */
  gap: 20px;
  padding: 14px 16px;
  text-align: center;        /* force le centrage */
}

/* Liens du menu */
nav a {
  color: #fff;
  text-decoration: none;
  font-weight: bold;
  font-size: 18px;
  display: inline-block;
}
nav a:hover { text-decoration: underline; }

/* Contenu sous le menu */
.container {
  max-width: 1000px;
  margin: 96px auto 40px;    /* auto = centre horizontalement */
  padding: 0 16px;
  text-align: center;        /* centre le texte */
}

/* Bloc image + texte d’accueil */
.hero {
  display: flex;
  flex-direction: column;    /* empile image + texte */
  justify-content: center;
  align-items: center;       /* centre horizontalement */
}
.hero img {
  width: 100%;               /* occupe toute la largeur dispo */
  max-width: 600px;          /* limite sur grand écran */
  height: auto;
  border-radius: 8px;
}

/* Pied de page */
footer {
  background: #2c3e50;
  color: white;
  text-align: center;
  padding: 15px;
  margin-top: 40px;
}

/* Titres et textes adaptatifs */
h1, h2, p {
  font-size: clamp(16px, 2.5vw, 22px);
  line-height: 1.4;
}

/* Sous-menu spécifique au Quiz */
.sub-menu {
  margin: 20px 0;
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
}
.sub-menu a {
  background: #34495e;
  color: #fff;
  padding: 8px 14px;
  border-radius: 4px;
  text-decoration: none;
  font-weight: bold;
}
.sub-menu a:hover {
  background: #2c3e50;
  text-decoration: underline;
}

/* Adaptations pour petits écrans */
@media (max-width: 600px) {
  nav a {
    font-size: 16px;
  }
  .container {
    margin-top: 120px;
    padding: 0 8px;
  }
  .hero img {
    max-width: 100%;         /* sur mobile, l’image prend toute la largeur */
  }
}
